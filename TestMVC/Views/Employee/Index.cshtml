@model IEnumerable<EmployeeViewModel>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Employee List</h2>
    <a href="/Employee/Create" class="btn btn-success">➕ Add New Employee</a>
</div>

<form method="get" class="mb-3">
    <input type="text" name="search" placeholder="Search by name" class="form-control w-25 d-inline-block" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Designation</th>
            <th>Basic</th>
            <th>DA</th>
            <th>CA</th>
            <th>HRA</th>
            <th>PT</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.EmployeeCode</td>
                <td>@emp.EmployeeName</td>
                <td>@emp.DateOfBirth.ToString("dd-MMM-yyyy")</td>
                <td>@(emp.Gender ? "Male" : "Female")</td>
                <td>@emp.Department</td>
                <td>@emp.Designation</td>
                <td>@emp.BasicSalary</td>
                <td>@emp.DearnessAllowance</td>
                <td>@emp.ConveyanceAllowance</td>
                <td>@emp.HouseRentAllowance</td>
                <td>@emp.PT</td>
                <td>@emp.TotalSalary</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Employee/Edit/@emp.EmployeeCode">Edit</a>
                    <a class="btn btn-sm btn-danger"
                       href="/Employee/Delete/@emp.EmployeeCode"
                       onclick="return confirm('Are you sure you want to delete this employee?')">
                        Delete
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>
